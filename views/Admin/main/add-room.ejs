<div class="main-panel">

    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">
                ADD NEW ROOM
            </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Admin</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Room type</li>
                </ol>
            </nav>
        </div>
        <form action="/admin/add-room" method="POST">
            <div class="row grid-margin">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <fieldset>
                                <div class="form-group">
                                    <label class="text-danger">Room ID</label>
                                    <input readonly class="form-control" required name="roomID" minlength="1" type="text" required>
                                </div>


                                <div class="form-group">
                                    <label for="" class="text-danger">Room Type Name</label>
                                    <select class="form-control" name="roomtype" id="">
                                        <% data1.map(function(item){%>
                                        <option value="<%= item.ROOMTYPE_ID%>"><%= item.ROOMTYPE_NAME%> </option>
                                        <%})%>
                                       
                                      </select>
                                </div>
                                <div class="form-group">
                                    <label for="" class="text-danger">Facility Name</label>
                                    <select class="form-control" name="facility" id="">
                                            <% data2.map(function(item){%>
                                            <option value="<%= item.FAC_ID%>"><%= item.FAC_NAME%> </option>
                                            <%})%>
                                           
                                          </select>
                                </div>
                                <div class="form-group">
                                    <label class="text-danger">Room Status</label>
                                    <input readonly class="form-control" value="0" required name="status" minlength="2" type="text" required>
                                </div>

                                <div class="form-group">
                                    <label class="text-danger">Room Image</label>
                                    <input class="form-control" required name="image" minlength="2" type="text" required>
                                </div>
                                <input name="" id="" class="btn btn-success" type="submit" value="Submit">
                                <input name="" id="" class="btn btn-dark" type="reset" value="Cancel">


                            </fieldset>
                        </div>
                    </div>
                </div>


            </div>
        </form>

    </div>