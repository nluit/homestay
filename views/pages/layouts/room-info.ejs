<div class="site-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-5 mb-md-0">
                <div class="img-border">
                    <a href="/">
                        <span class="icon-wrap">
                        </span>
                        <img src="<%= data[0].ROOM_IMG %>" alt="" class="img-fluid">
                    </a>
                </div>

                <img src="<%= data[0].ROOM_IMG%>" alt="Image" class="img-fluid image-absolute">

            </div>
            <div class="col-md-5 ml-auto">

                <div class="section-heading text-left">

                    <h2 class="mb-5">
                        <%= data[0].ROOMTYPE_NAME %>
                            <br>
                    </h2>
                    <br>

                </div>
                <p class="mb-4">

                    <%= data[0].ROOMTYPE_DESC%>
                </p>

                <br>
                <span class="mb-5 text-dark">
                     Giá phòng:  <i class="text-dark"> <%= data[0].ROOMTYPE_PRICE %> đ</i>
                    </span>
                <br>
                <span class="mb-5 text-dark">
                            Số người:  <i class="text-dark"> <%= data[0].ROOMTYPE_MAXCUSNUM %> </i>
                           </span>
                <br>
                <span class="mb-5 text-dark">
                        Kích thước:  <i class="text-dark"> <%= data[0].ROOMTYPE_SIZE %> m <sup>2</sup></i>
                               </span>

                <p class="mt-4">
                    <span class="mb-5 text-dark">
                    Facility :  <i class="text-dark"> <%= data[0].FAC_NAME %> </i>
                    </span>
                    <br>
                    <span class="mb-5 text-dark">
                            Address :  <i class="text-dark"> <%= data[0].FAC_ADDRESS %> </i>
                            </span>
                </p>

                <p><a href="/add-to-cart/<%= data[0].ROOM_ID %>" class=" text-uppercase">Add to Cart <span class="icon-arrow-right small"></span></a></p>
            </div>
        </div>
    </div>
</div>